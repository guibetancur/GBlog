<div class="container">
  <div class="col-md-6 col-md-offset-3">
  <div class="row">
    <h1>Listando Art√≠culos</h1>
    <%= link_to 'Crear nuevo Articulo', new_articulo_path %>
    </div>
  </div>

  <div class="row">
      <table class="table table-striped">
        <thead>
          <th>Titular</th>
          <th>Autor</th>
          <th>Contenido</th>
        </thead>

        <tbody>
          <% @articulos.each do |articulo| %>
            <tr>
              <td><%= articulo.titular %></td>
              <td><%= articulo.user.first_name %>
              <%= articulo.user.last_name %></td>
              <td><%= articulo.titular %></td>
              <td><%= link_to 'Ver', articulo_path(articulo) %></td>
              <td><%= link_to 'Editar', edit_articulo_path(articulo) %></td>
              <td>
                <%=
                link_to 'Eliminar',
                articulo_path(articulo),
                method: :delete,
                data: { confirm: "Estas seguro de eliminar?" }
                %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</div>
</div>
